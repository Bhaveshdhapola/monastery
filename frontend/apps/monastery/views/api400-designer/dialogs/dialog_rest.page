.grid-container-extension {
    height: 100%;
}

.grid-item-extension {
    background-color: var(--dialog-background, white);
    padding: 10px 20px 0px 20px;
    display: flex;
    flex-flow: row;
    box-sizing: border-box;
    margin-top:15px;

}

.grid-item-extension > input, .grid-item-extension > input:focus{
    width: 100%;
    border-radius: 4px;
    border: 0px;
    outline: none;
    padding: 12px;
    resize: none;
    height:8px;
    font-family: inherit;
}

.grid-item-extension > textarea, .grid-item-extension > textarea:focus {
    width: 100%;
    border-radius: 10px;
    border: 0px;
    outline: none;
    padding: 10px;
    resize: none;
    font-family: inherit;
}

.class-method{
     padding: 6px 25px 0px 11px;
     margin-top:10px;
}

::placeholder {opacity: 0.5;}

body {
    margin: 0%;
    display: inline-block;
    width: 100%;
}
