.grid-container-extension {
    height: 100%;
}

.grid-item-extension {
    background-color: var(--dialog-background, white);
    padding: 10px 20px 10px 20px;
    display: flex;
    flex-flow: row;
    box-sizing: border-box;
}

.grid-item-extension > input, .grid-item-extension > input:focus{
    width: 100%;
    border-radius: 4px;
    border: 4px;
    outline: none;
    padding: 10px;
    resize: none;
    height:10px;
    font-family: inherit;
}
.item0>input,.item2>input{
    margin-right:1.3em;
}
.item1>input{
    margin-left:1.3em;
}
select#type{
    margin-left:1.3em;
    
}
.item3{
    margin-right:1em;
}


::placeholder {opacity: 0.8;}

body {
    margin: 0%;
    display: inline-block;
    width: 100%;
