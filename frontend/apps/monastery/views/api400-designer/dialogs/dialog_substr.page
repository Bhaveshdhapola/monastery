.grid-container-extension {
    height100%;
    width:100%;
}

.grid-item-extension {
    background-color: var(--dialog-background, white);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-flow: row;
    box-sizing: border-box;
}

::placeholder {opacity: 0.8;}

body {
    margin: 0%;
    display: inline-block;
    width: 100%;
}
div#page-contents{
    width: 100%; 
}


div.substrdiv{
  background: #C9E5FF;
  margin:12px 20px 20px 18px;
  border-radius:5px;
  display: grid;
  grid-template-columns: 32% 32% 18% 18%;
  grid-template-rows: auto;
  grid-template-areas:  "variablebox stringbox indexbox  countbox" ;
   
}

div.substrdiv>.variablebox {
  grid-area: variablebox;
  
}
div.substrdiv>.stringbox {
  grid-area: stringbox;
}
div.substrdiv>.indexbox {
  grid-area: indexbox;
}
div.substrdiv>.countbox {
  grid-area: countbox;
}
   
