.grid-container-extension {
    height100%;
    width:100%;
}

.grid-item-extension {
    background-color: var(--dialog-background, white);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-flow: row;
    box-sizing: border-box;
}
.grid-item-extension > input, .grid-item-extension > input:focus {
    width: 100%;
    border-radius: 5px;
    border: 0px;
    outline: none;
    padding: 10px;
    resize: none;
    height:10px;
    margin:10px 22px 10px 20px;
    font-family: inherit;   
}
::placeholder {opacity: 0.8;}

body {
    margin: 0%;
    display: inline-block;
    width: 100%;
}
div#page-contents{
    width: 100%;
  
}

div.scr-keys{
  background: #C9E5FF;
  border-radius:7px;
  margin:12px 20px 20px 18px;
  display: grid;
  grid-template-columns: 20% 20% 60% ;
  grid-template-rows: auto;
  grid-template-areas:  " y-coordinates x-coordinates keys";
    
}


div.scr-keys>.keys {
  grid-area: keys;
}
div.scr-keys>.y-coordinates {
  grid-area: y-coordinates;
}
div.scr>.x-coordinates {
  grid-area: x-coordinates;
}
input::-webkit-outer-spin-button, input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

input[type=number] {
  -moz-appearance: textfield;
}

   
