.grid-container-extension {
    height: 100%;
}

.grid-item-extension {
    background-color: var(--dialog-background, white);
    padding: 10px 20px 10px 20px;
    display: flex;
    flex-flow: row;
    box-sizing: border-box;
    margin-top: 0.8em;
}

.grid-item-extension > input, .grid-item-extension > input:focus{
    width: 90%;
    border-radius: 4px;
    border: 0px;
    outline: none;
    padding: 10px;
    resize: none;
    height:8px;
    font-family: inherit;
 
}
 
.item0{
    display:flex;
    justify-content: flex-end;
    margin-top:1em;
    margin-right:1.5em;
}

.item1{
    display:flex;
    justify-content: flex-start;
    margin-top:1em;
    margin-left:1.5em;
}

.item2{
     display:flex;
    justify-content: flex-end;
    margin-top:0.5em;
    margin-right:2em;
}

.item3{
    display:flex;
    justify-content: flex-start;
    margin-top:1em;
    margin-left:1.5em;
}

::placeholder {opacity: 0.8;}

body {
    margin: 0%;
    display: inline-block;
    width: 100%;
}

