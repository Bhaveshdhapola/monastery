.grid-container-extension {
    height100%;
    width:100%;
}

.grid-item-extension {
    background-color: var(--dialog-background, white);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-flow: row;
    box-sizing: border-box;
}

::placeholder {opacity: 0.8;}

body {
    margin: 0%;
    display: inline-block;
    width: 100%;
}
div#page-contents{
    width: 100%;
    display: grid;
    grid-template-columns:100%;
}
div.Variable{
    width: 100%;
    margin-bottom:13px;
    margin-left:20px;
    display: grid;
    grid-template-columns:25% 70%;
    background: #C9E5FF;
    border-radius: 5px;
    

}
div.Variable>input.firstbox{
    margin:8px 0px 8px 20px;
}
div.Variable>input.secondbox{
    margin:8px 0px 8px 40px;
   
