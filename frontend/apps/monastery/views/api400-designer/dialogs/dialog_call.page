.grid-container-extension {
    height100%;
    width:100%;
}

.grid-item-extension {
    background-color: var(--dialog-background, white);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-flow: row;
    box-sizing: border-box;
    margin-top:0.5em;
}

.grid-item-extension > input, .grid-item-extension > input:focus {
    width: 80%;
    border-radius: 3px;
    border: 0px;
    outline: none;
    padding: 10px;
    resize: none;
    height:10px;
    margin-bottom:10px; 
    font-family: inherit;
    margin-left:20px;
    margin-right:1.2em;
}

.item0{
    display:flex;
    justify-content: flex-start;  
    width:97%;
}  

.item1{
    display:flex;
    justify-content: flex-end;
    width:100%;
}

::placeholder {opacity: 0.8;}

body {
