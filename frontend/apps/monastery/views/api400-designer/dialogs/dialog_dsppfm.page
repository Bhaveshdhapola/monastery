.grid-container-extension {
    height: 100%;
}

.grid-item-extension {
    background-color: var(--dialog-background, white);
    padding: 10px 20px 10px 20px;
    display: flex;
    flex-flow: row;
    box-sizing: border-box;
    margin-top:15px;
}

.grid-item-extension > input, .grid-item-extension > input:focus{
    width: 100%;
    border-radius: 4px;
    border: 0px;
    outline: none;
    padding: 10px;
    resize: none;
    height:10px;
    font-family: inherit;
    
}
.item0>input{
    margin-right:1.5em;
}
.item1>input{
    margin-left:1.5em;
}

::placeholder {opacity: 0.8;}

body {
    margin: 0%;
    display: inline-block;
    width: 100%;
}
