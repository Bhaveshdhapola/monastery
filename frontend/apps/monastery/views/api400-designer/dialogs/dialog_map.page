.grid-container-extension {
    height100%;
    width:100%;
}

.grid-item-extension {
    background-color: var(--dialog-background, white);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-flow: row;
    box-sizing: border-box;
}

::placeholder {opacity: 0.8;}

body {
    margin: 0%;
    display: inline-block;
    width: 100%;
}
div#page-contents{
    width: 100%;
  
}

div.map{
  background: #C9E5FF;
  border-radius:7px;
  margin:12px 20px 20px 18px;
  display: grid;
  grid-template-columns: 28% 40% 15% 17%;
  grid-template-rows: auto;
  grid-template-areas: 
    "variablebox stringbox startbox  countbox"
    "  .  functionbox functionbox  repitionbox";
}

div.map>.variablebox {
  grid-area: variablebox;
}
div.map>.stringbox {
  grid-area: stringbox;
}
div.map>.startbox {
  grid-area: startbox;
}
div.map>.countbox {
  grid-area: countbox;
}
div.map>.functionbox {
  grid-area: functionbox;
}
div.map>.repitionbox {
  grid-area: repitionbox;
}

   
