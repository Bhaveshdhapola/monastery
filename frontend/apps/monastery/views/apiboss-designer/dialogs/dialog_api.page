.grid-container-extension {
    height: 100%;
    overflow-y: auto;
    grid-row-gap: 0.5em;
}

.grid-item-extension {
    background-color: var(--dialog-background, white);
    padding: 10px;
    display: flex;
    flex-flow: row;
    box-sizing: border-box;
}

.grid-item-extension > input, .grid-item-extension > input:focus {
    width: 100%;
    border-radius: 10px;
    border: 0px;
    outline: none;
    padding: 12px;
    resize: none;
    font-family: inherit;
    box-sizing: border-box;
}

::placeholder {opacity: 0.8;}

.class-method,.class-method1,.class-yesorno{
     padding: 3px 20px 0px 0px;
}


