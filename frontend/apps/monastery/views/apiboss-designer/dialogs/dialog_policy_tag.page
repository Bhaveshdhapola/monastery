.grid-container-extension {
    height: 100%;
    overflow-y: auto;
}

.grid-item-extension {
    background-color: var(--dialog-background, white);
    padding: 10px;
    display: flex;
    flex-flow: row;
    box-sizing: border-box;
}

.grid-item-extension > input, .grid-item-extension > input:focus {
    width: 100%;
    border-radius: 10px;
    border: 0px;
    outline: none;
    padding: 10px;
    resize: none;
    font-family: inherit;
    box-sizing: border-box;
}

::placeholder {opacity: 0.8;}

