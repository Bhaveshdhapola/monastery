{
    "extensions": [
        "proxy",
        "redirect"
    ],
    "proxies": [
        {
            "^http(.*)://([^:/]+)[:]?.*?/apps/monastery/proxiedapis/(.*)$": "http{{{$1}}}://{{{$2}}}:9092/apps/monastery/proxiedapis/{{{$3}}}"
        }
    ],
	"redirects": [{
            "^http(.*)://([^/]+?)/index.html$": "http{{{$1}}}://{{{$2}}}/apps/monastery/loginappframework/index.html"
        },
        {
            "^http(.*)://([^/]+?)/$": "http{{{$1}}}://{{{$2}}}/apps/monastery/loginappframework/index.html"
        },
        {
            "^http(.*)://([^/]+?)$": "http{{{$1}}}://{{{$2}}}/apps/monastery/loginappframework/index.html"
        }],  
  "diskCache": {
        "refresh": 300000,
        "dontCache": [
            ".*\\.pdf"
        ],
        "maxSizeInMB": "1024",
        "ignoreAfterMaxHits": 10
    },
    "httpdHeaders": {
        "Server": "Monkshu HTTPD",
	"X-XSS-Protection": 1,
	"X-Frame-Options": "deny",
	"X-Content-Type-Options": "nosniff",
	"Cache-Control": "max-age=31536000, private"    
    },
    "ssl": true,
    "sslKeyFile":"/etc/letsencrypt/live/monastery.codes/privkey.pem",
    "sslCertFile":"/etc/letsencrypt/live/monastery.codes/fullchain.pem",
    "port": 443
}
